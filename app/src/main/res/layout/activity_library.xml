<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    tools:context=".Library">

    <TextView
        android:id="@+id/left_text"
        android:text="@string/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="@dimen/text_padding"/>
    
    <TextView
        android:id="@+id/below_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/below_left_text"
        android:background="@color/purple"
        android:layout_below="@id/left_text"
        android:padding="@dimen/text_padding" />

    <TextView
        android:id="@+id/right_text"
        android:text="@string/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:layout_alignParentRight="true"
        android:padding="@dimen/text_padding" />

    <TextView
        android:id="@+id/center_text"
        android:text="@string/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/deep_purple"
        android:padding="@dimen/text_padding" />

    <TextView
        android:id="@+id/bottom_center_text"
        android:text="@string/bottom_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/indigo"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/text_padding" />

    <TextView
        android:id="@+id/above_bottom_center_text"
        android:text="@string/above_bottom_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_above="@id/bottom_center_text"
        android:layout_centerInParent="true"
        android:padding="@dimen/text_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/below_left_text"
        android:layout_marginBottom="@dimen/layout_padding"
        android:layout_marginTop="@dimen/layout_padding">

        <TextView
            android:text="BIG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red"
            android:padding="@dimen/text_padding"/>

        <TextView
            android:text="SHORT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@color/blue"
            android:padding="@dimen/text_padding"/>

    </LinearLayout>

</RelativeLayout>
